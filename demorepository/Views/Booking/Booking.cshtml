<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="image-container set-full-height" style="background-image: url('~/assets/img/paper-2.jpg')">

        <a href="#">
            <div class="logo-container">
                <div class="logo">
                    <img src="~/assets/img/new_logo.png" />
                </div>
                <div class="brand">
                    Trần Quang Huy
                </div>
            </div>
        </a>
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">

                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="red" id="wizard">
                            <form action="" method="">
                                <!--        You can switch " data-color="green" "  with one of the next bright colors: "blue", "azure", "orange", "red"       -->

                                <div class="wizard-header">
                                    <h3 class="wizard-title">HUY & NHAN Travel</h3>
                                    <p class="category">Điền những thông tin cần thiết trước khi khởi hành</p>
                                </div>
                                <div class="wizard-navigation">
                                    <div class="progress-with-circle">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="4" style="width: 15%;"></div>
                                    </div>
                                    <ul>
                                        <li>
                                            <a href="#location" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-map"></i>
                                                </div>
                                                Chọn tuyến
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#type" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-dropbox"></i>
                                                </div>
                                                Gửi hàng
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#facilities" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-check"></i>
                                                </div>
                                                Xác nhận thông tin
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#description" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-money"></i>
                                                </div>
                                                Thanh toán
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div class="tab-pane" id="location">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <h5 class="info-text">Chọn nơi bạn muốn đến</h5>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Địa điểm đi </label><br>
                                                    <select name="country" class="form-control">
                                                        <option disabled="" selected="">Chọn điểm đi</option>
                                                        <option value="Afghanistan"> Hà nội </option>
                                                        <option value="Albania"> Hải Phòng </option>
                                                        <option value="Algeria"> Quảng Nam </option>
                                                        <option value="American Samoa"> Tp. Hồ Chí Minh </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Địa điểm đến</label><br>
                                                    <select name="country" class="form-control">
                                                        <option disabled="" selected="">Chọn điểm đi</option>
                                                        <option value="Afghanistan"> Hà nội </option>
                                                        <option value="Albania"> Hải Phòng </option>
                                                        <option value="Algeria"> Quảng Nam </option>
                                                        <option value="American Samoa"> Tp. Hồ Chí Minh </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Ngày đi</label>
                                                    <div class="input-group">
                                                        <input type="date" class="form-control" placeholder="Ngày đi">
                                                        <span class="input-group-addon"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Ngày về</label>
                                                    <div class="input-group">
                                                        <input type="date" class="form-control" placeholder="Ngày về">
                                                        <span class="input-group-addon"></span>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="tab-pane" id="type">
                                        <h5 class="info-text">Chọn hàng bạn muốn gửi</h5>
                                        <div class="row">
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Ngày về</label>
                                                    <div class="input-group">
                                                        <input type="time" class="form-control" placeholder="Ngày về">
                                                        <span class="input-group-addon"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Địa điểm đến</label><br>
                                                    <select name="country" class="form-control">
                                                        <option disabled="" selected="">Chọn điểm đi</option>
                                                        <option value="Afghanistan"> Hà nội </option>
                                                        <option value="Albania"> Hải Phòng </option>
                                                        <option value="Algeria"> Quảng Nam </option>
                                                        <option value="American Samoa"> Tp. Hồ Chí Minh </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Ngày đi</label>
                                                    <div class="input-group">
                                                        <input type="date" class="form-control" placeholder="Ngày đi">
                                                        <span class="input-group-addon"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Ngày về</label>
                                                    <div class="input-group">
                                                        <div class="input-append bootstrap-timepicker-component">
                                                            <input type="text" class="timepicker input-small">
                                                            <span class="add-on">
                                                                <i class="icon-time"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="facilities">
                                        <h5 class="info-text">Hãy điền một số thông tin cá nhân về bạn</h5>
                                        <div class="row">
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Your place is good for</label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" placeholder="Rent price per day">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Is air conditioning included ?</label>
                                                    <select class="form-control">
                                                        <option disabled="" selected="">- response -</option>
                                                        <option>Yes</option>
                                                        <option>No </option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Does your place have wi-fi?</label>
                                                    <select class="form-control">
                                                        <option disabled="" selected="">- response -</option>
                                                        <option>Yes</option>
                                                        <option>No </option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Is breakfast included?</label>
                                                    <select class="form-control">
                                                        <option disabled="" selected="">- response -</option>
                                                        <option>Yes</option>
                                                        <option>No </option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Your place is good for</label>
                                                    <select class="form-control">
                                                        <option disabled="" selected="">- type -</option>
                                                        <option>Business</option>
                                                        <option>Vacation </option>
                                                        <option>Work</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <h5 class="info-text"><a href="#">Đăng nhập</a> hoặc <a href="#">Đăng ký</a> để cập nhật thông tin</h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="description">
                                        <div class="row">
                                            <h5 class="info-text"> Vui lòng kiểm tra lại thông tin trước khi thanh toán </h5>
                                            <div class="col-sm-6 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Place description</label>
                                                    <textarea class="form-control" placeholder="" rows="9"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Example</label>
                                                    <p class="description">"The place is really nice. We use it every sunday when we go fishing. It is so awesome."</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-footer">
                                    <div class="pull-right">
                                        <input type='button' class='btn btn-next btn-fill btn-danger btn-wd' name='next' value='Next' />
                                        <input type='button' class='btn btn-finish btn-fill btn-danger btn-wd' name='finish' value='Finish' />
                                    </div>

                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </form>
                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div> <!-- row -->
        </div> <!--  big container -->

        <div class="footer">
        </div>
        <div class="fixed-plugin">
            <div class="dropdown open">
                <a href="#" data-toggle="dropdown">
                    <i class="fa fa-cog fa-2x"> </i>
                </a>

            </div>
        </div>
    </div>

</body>



</html>
